<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <% include ../partials/head %>
</head>
<body>
    <header>
        <% include ../partials/header %>
    </header>
    <main>
        <div class="container-fluid">
            <div class="row text-center" id="main-login-intro">
                <div id="linear">
                    <h1 class="align-self-center display-4" style="padding-top: 150px;">Login or Register</h1>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row" id="login-and-register">
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    <h1>Login
                        <span class="font-weight-light"> Now</span>
                    </h1>
                    <p class="font-weight-light">Login to our website</p>
                    <a href="/auth/facebook/">
                        <button type="button" class="btn btn-primary btn-sm btn-block">Login with Facebook</button>
                    </a>
                    <h2 class="horizontalTitle" id="lineBreak">
                        <span>or Sign in</span>
                    </h2>
                    <form action="/user/login" , method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required="" />
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required="" />
                        </div>
                        <br/>
                        <button type="submit" class="btn btn-warning btn-sm">LOGIN NOW</button>
                        <% if (typeof (stt) !== 'undefined') {
                                if(stt == "error") { %>
                            <small style="color: red;" class="form-text">
                                <%= message %>
                            </small>
                            <% } %>
                                <% } %>
                    </form>
                    <small class="form-text">
                        <a href="/user/forgot">Did you forget your password?</a>
                    </small>
                </div>
                <div class="col-md-2 text-center align-self-center">
                    <h2 class="verticalTitle" id="lineBreak">
                        <span>Or</span>
                    </h2>
                </div>
                <div class="col-md-3">
                    <h1>Register
                        <span class="font-weight-light"> Now</span>
                    </h1>
                    <p class="font-weight-light">Required information for account creation</p>
                    <form action="/user/registration" , method="POST">
                        <div class="form-group">
                            <input type="email" id="regEmail" onkeyup="checkInput();" onkeydown="checkInput();" class="form-control" name="email" placeholder="Email"
                                required="" />
                        </div>
                        <% if (typeof (stt) !== 'undefined') {
                                if(stt == "errorEmail") { %>
                            <small style="color: red;" class="form-text">
                                <%= message %>
                            </small>
                            <% } %>
                                <% } %>
                                    <div class="form-group">
                                        <input type="text" id="regName" class="form-control" onkeyup="checkInput();" onkeydown="checkInput();" name="name" placeholder="Name"
                                            required="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" onkeyup="checkInput();" onkeydown="checkInput();" name="password" placeholder="Password"
                                            id="regPassword" required="" />
                                    </div>
                                    <div class="form-group">
                                        <input id="regConfirmPass" onkeyup="checkConfirmPassword();" onkeydown="checkConfirmPassword();" class="form-control" type="password"
                                            placeholder="Confirm Password" name="confirmPass" required="" />
                                    </div>
                                    <button type="submit" id="signUpBtn" class="btn btn-warning btn-sm" disabled='true'>SIGN UP NOW
                                    </button>
                    </form>
                </div>
                <div class="col-md-2">

                </div>
            </div>

            <!-- Contact -->
            <% include ../partials/contact %>
        </div>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>

</html>